<%= link_to project_path(project) do %>
  <tr>
    <td><%= project.id %>
      <td><%= link_to project.name, [project] %>
        <td><%= link_to project.tickets.count, admin_project_path(project) %>
          <td><%= link_to "#{project.tickets.newly_created.count} new", admin_project_path(project, state: 'New') %></td>
          <td><%= link_to "#{project.tickets.closed.count} closed", admin_project_path(project, state: 'Closed') %></td>
          <td><%= link_to "#{project.tickets.active} active", admin_project_path(project, state: 'Active') %></td>
          <td><%= link_to '',
          edit_admin_project_path(project),
          class: "edit" %></td>
          <td><%= link_to 'X',
          admin_project_path(project),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this project?" },
          class: "delete" %></td>
        </tr>
      <% end %>
