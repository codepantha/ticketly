<%= link_to project_path(project) do %>
  <tr>
    <td><%= project.id %>
      <td><%= link_to project.name, [project] %>
        <td><%= link_to project.tickets.count, admin_project_path(project) %>
          <td><%= "#{project.tickets.newly_created.count} new" %></td>
          <td><%= "#{project.tickets.closed.count} closed" %></td>
          <td><%= "#{project.tickets.active} active" %></td>
          <td><%= link_to '',
          edit_admin_project_path(project),
          class: "edit" %></td>
          <td><%= link_to 'X',
          admin_project_path(project),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this project?" },
          class: "delete" %></td>
        </tr>
      <% end %>
